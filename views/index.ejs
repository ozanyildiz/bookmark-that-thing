<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark-That-Thing</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
  </head>
  <body>
    <div class="navbar navbar-default" role="navigation">
      <div class="container">
        <div class="navbar-header">
             <a class="navbar-brand" href="#">Bookmark-That-Thing</a>
        </div>
      </div>
    </div>

  <div class="container">
    <form class="form-horizontal" role="form" action="/" method="POST">
      <div class="form-group">
        <label for="inputUrl" class="col-sm-2 control-label">URL</label>
        <div class="col-sm-8">
          <input type="url" class="form-control" name="inputUrl" placeholder="Enter url here!">
        </div>
      </div>
      <div class="form-group">
        <label for="inputTags" class="col-sm-2 control-label">Tags</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="inputTags" placeholder="Enter tags seperated by comma">
        </div>
      </div>
      <div class="form-group">
        <label for="inputNotes" class="col-sm-2 control-label">Notes</label>
        <div class="col-sm-8">
          <textarea class="form-control" name="inputNotes" rows="3"></textarea>
        </div>
      </div>
       <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Add Bookmark</button>
        </div>
      </div>
    </form>
    <div class="list-group">
      <% for(var i = 0; i < bookmarks.length; i++) {%>
        <div class="list-group-item">
          <span class="pull-right"><%= bookmarks[i]['created_at'] %></span>
          <p class="list-group-item-heading"><a href="<%= bookmarks[i]['url'] %>"><%= bookmarks[i]['url'] %></a></p>
          <p class="list-group-item-text">[<%= bookmarks[i]['tags'] %> - <%= bookmarks[i]['notes'] %>]</p>
        </div>
      <% } %>
    </div>
  </div>
  </body>
</html>